{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Metrics Data Schema",
  "description": "Schema for aggregated metrics data",
  "type": "object",
  "required": ["session_id", "total_events", "total_duration_ms", "total_cost", "success_rate"],
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Session identifier these metrics belong to"
    },
    "total_events": {
      "type": "integer",
      "minimum": 0,
      "description": "Total number of events recorded"
    },
    "total_duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Total session duration in milliseconds"
    },
    "total_cost": {
      "type": "number",
      "minimum": 0,
      "description": "Total cost in USD"
    },
    "success_rate": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Success rate (0.0 to 1.0)"
    },
    "task_breakdown": {
      "type": "object",
      "properties": {
        "total_tasks": {
          "type": "integer",
          "minimum": 0
        },
        "completed_tasks": {
          "type": "integer",
          "minimum": 0
        },
        "failed_tasks": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "token_summary": {
      "type": "object",
      "properties": {
        "total_input_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_output_tokens": {
          "type": "integer",
          "minimum": 0
        },
        "total_tokens": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "tool_summary": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer"
          },
          "success_count": {
            "type": "integer"
          },
          "avg_duration_ms": {
            "type": "number"
          }
        }
      }
    },
    "error_summary": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "count": {
            "type": "integer"
          }
        }
      }
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "When metrics were calculated"
    }
  },
  "examples": [
    {
      "session_id": "ses_abc123",
      "total_events": 45,
      "total_duration_ms": 180000,
      "total_cost": 0.15,
      "success_rate": 0.93,
      "task_breakdown": {
        "total_tasks": 5,
        "completed_tasks": 4,
        "failed_tasks": 1
      },
      "token_summary": {
        "total_input_tokens": 20000,
        "total_output_tokens": 10000,
        "total_tokens": 30000
      },
      "tool_summary": {
        "read": {"count": 15, "success_count": 15, "avg_duration_ms": 25},
        "edit": {"count": 10, "success_count": 9, "avg_duration_ms": 150}
      },
      "timestamp": "2024-01-15T10:33:00Z"
    }
  ]
}